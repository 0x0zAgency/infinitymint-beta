# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.prisma]
indent_style = tab
indent_size = 4

[*.json]
indent_style = tab
indent_size = 4

[*.{yml,yaml}]
indent_style = tab
indent_size = 4

[public/*.html]
indent_style = tab
indent_size = 4
